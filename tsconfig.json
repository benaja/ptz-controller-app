{
  "compilerOptions": {
    // "target": "ESNext",
    // "module": "ES2020",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    // "noImplicitAny": true,
    // "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    // "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/main/*"],
      "@core/*": ["./src/core/*"],
      "@main/*": ["./src/main/*"],
      "@renderer/*": ["./src/renderer/*"]
    }
  },
  "include": ["src", "*.ts", "*.html"],
  "exclude": ["node_modules", "dist"]
}
