{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    // "noImplicitAny": true,
    // "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    // "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": false,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/main/*"],
      "@core/*": ["./src/core/*"],
      "@main/*": ["./src/main/*"],
      "@renderer/*": ["./src/renderer/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src", "*.ts", "*.html", "*.js"]
}
