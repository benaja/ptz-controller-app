{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "#preload": ["../preload/src"],
      "@/*": ["./src/*"],
      "@renderer/*": ["./src/*"],
      "@main/*": ["../main/src/*"],
      "@preload/*": ["../prload/src/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../main/src/**/*.ts",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
